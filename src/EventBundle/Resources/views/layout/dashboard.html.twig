<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Solidarité Sida - Trombinoscope</title>
    <link rel="stylesheet" href="/css/reset.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <header>
        <div class="header_container">
            <a href="javascript:history.back()">Retour</a>
            <ul>
                {% if current_user.get().isAdmin() %}<a href="/import"><li>IMPORTER</li></a>{% endif %}
                <a href="/print"><li class="orange_button">IMPRESSION</li></a>
                <a href="/dashboard">
                    <li class="menu-dropdown">{{ current_user.get().getFirstName() }} {{ current_user.get().getLastName() }}
                        <div class="dropdown-content">
                            <a class="dropdown-content-a" href="/logout">Déconnexion</a>
                            <a class="dropdown-content-a" href="https://www.youtube.com/watch?v=0lej8BJ18hw&feature=youtu.be">Tutoriel</a>
                        </div>
                    </li>
                </a>
            </ul>
        </div>
    </header>

    <div class="controls_container">
        <h2>{{ constant('PeopleBundle\\Helper\\RoleHelper::ROLES')[current_user.get().getRole()] }}</h2>
        <div class="controls_bar">
            <h5>{% block title %}{% endblock %}</h5>
        </div>

        <div class="controls_bar end">
            {% block controls %}
            <ul>
                <li>Afficher :</li>
                <li id="display_phone"><img src="/images/tel.png" width="30"></li>
                <li id="display_email"><img src="/images/mail.png" width="30"></li>
                <li id="display_address"><img src="/images/adresse.png" width="30"></li>
                <li id="display_permis"><img src="/images/permis.png" width="30"></li>
            </ul>
            {% endblock %}
        </div>
        <li class="sort-by-dropdown">Trier par : <span class="sort-by-dropdown-span">Prénom &darr </span>;
            <div class="sort-by-dropdown-content">
                <a class="sort-by-dropdown-a" href="">Prénom</a>
                <a class="sort-by-dropdown-a" href="">Nom</a>
            </div>
        </li>
        <hr>
    </div>



    {% block content %}{% endblock %}

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="/js/script.js"></script>
    {% block javascript %}{% endblock %}
</body>
</html>
