{% extends "@EventBundle/layout/dashboard.html.twig" %}

{% block title %}Zones{% endblock %}

{% block content %}
<div class="card_container">
    {% if zones is empty %}
        <div style="text-align: center; width: 100%; margin-top: 20px">
            Il n'y a aucunes Zones <br><br>
        </div>
    {% else %}
        {% for zone in zones %}
        <div class="card">
            <a href="/zone/{{ zone.getId() }}"><h5>{{ zone.getName() }}</h5></a>
            {% if zone.getChiefs() is empty %}
                <center style="margin-top: 10px; font-size: 13px">Il n'y a aucun coordinateur</center>
            {% else %}
                {% for chief in zone.getChiefs() %}
                <div class="person_card">
                    <div class="person_photo"></div>
                    <div class="person_info">
                        <span>{{ chief.getPeople().getFirstName() }} {{ chief.getPeople().getLastName() }}</span>
                        <p class="person_poste">Coordinateur</p>
                    </div>
                </div>
                {% endfor %}
            {% endif %}
        </div>
        {% endfor %}
    {% endif %}
</div>
{% endblock %}
